<div class="lt-breadcrumbs-wrapper lt-mb-8 lt-container lt-d-print-none">
  <div class="lt-container-inner">{{breadcrumbs}}</div>
</div>

<div class="lt-container my-activities-page lt-pb-8">
  <div class="lt-container-inner">
    <h1 class="lt-header lt-fs-3 lt-fs-md-1">{{t 'contributions' }}</h1>

    <nav class="lt-my-activities-menu lt-my-activities-menu--sub">
      <ul role="list" class="lt-list-unstyled lt-d-flex lt-flex-column lt-flex-sm-row">
        {{#each filters}}
          <li class="lt-my-activities-menu-item {{#if selected}} is-active {{/if}}">
            {{#if selected}}
              {{name}}
            {{else}}
              <a href="{{url}}">{{name}}</a>
            {{/if}}
          </li>
        {{/each}}
      </ul>
    </nav>

    {{#if contributions}}
      <table class="lt-my-activities-items" id="main-content">
        <thead class="lt-my-activities-items__head">
          <tr class="lt-my-activities-items__row">
            <td class="lt-my-activities-items__col">{{t 'title'}}</td>
            <td class="lt-my-activities-items__col">{{t 'vote_sum'}}</td>
            <td class="lt-my-activities-items__col">{{t 'last_activity'}}</td>
            <td class="lt-my-activities-items__col">{{t 'created'}}</td>
          </tr>
        </thead>
        <tbody class="lt-my-activities-items__body">
          {{#each contributions}}
            <tr class="lt-my-activities-items__row lt-my-activities-item">
              <td class="lt-my-activities-items__col">
                <a class="lt-my-activities-item__title" href="{{url}}">
                  {{excerpt title characters=60}}
                </a>
              </td>
              <td class="lt-my-activities-items__col lt-my-activities-item__meta">                  
                {{vote_sum}}
              </td>
              <td class="lt-my-activities-items__col lt-my-activities-items__col--activity lt-my-activities-item__meta">{{date last_activity_at format="medium"}}</td>
              <td class="lt-my-activities-items__col lt-my-activities-item__meta">{{date created_at format="medium"}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      {{pagination}}
    {{else}}
      <p>{{t 'no_contributions'}}</p>
    {{/if}}
  </div>
</div>